<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - WS Emisión</title>
    @Styles.Render("~/Content/General")
    @RenderSection("styles", false)
</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("WS Emisión", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="@Url.Action("Index", "Coaseguro", new { area = string.Empty })">
                                <span class="fas fa-people-carry"></span>
                                Coaseguro
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Help", new { area = string.Empty })">
                                <span class="fas fa-code"></span>
                                API
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Grupo Mexicano de Seguros, S.A. de C.V.</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/General")
        @RenderSection("scripts", required: false)
    </body>
</html>
